@model WebApp.ViewModels.PessoaViewModel

@{
    ViewData["Title"] = "Excluir Pessoa";
}

<h1>Confirmar Exclusão</h1>

<h3>Você tem certeza que deseja excluir esta pessoa?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>
    </dl>
</div>

<form method="post" action="/Pessoa/Delete/@Model.Id">

    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

